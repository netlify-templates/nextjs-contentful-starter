    <script>
        let selectedNumbers = new Set();
        const pricePerNumber = 3.00;

        // Generate number grid
        function generateNumberGrid() {
            const grid = document.getElementById('numberGrid');
            for (let i = 0; i <= 99; i++) {
                const numberStr = i.toString().padStart(2, '0');
                const button = document.createElement('button');
                button.className = 'number-btn bg-white hover:bg-blue-100 border-2 border-gray-300 hover:border-blue-400 rounded-lg p-3 font-bold text-lg transition-all duration-300 shadow-sm hover:shadow-md';
                button.textContent = numberStr;
                button.onclick = () => toggleNumber(numberStr, button);
                grid.appendChild(button);
            }
        }

        // Toggle number selection
        function toggleNumber(number, button) {
            if (selectedNumbers.has(number)) {
                selectedNumbers.delete(number);
                button.className = 'number-btn bg-white hover:bg-blue-100 border-2 border-gray-300 hover:border-blue-400 rounded-lg p-3 font-bold text-lg transition-all duration-300 shadow-sm hover:shadow-md';
            } else {
                selectedNumbers.add(number);
                button.className = 'number-btn selected bg-gradient-to-r from-blue-500 to-blue-600 text-white border-2 border-blue-600 rounded-lg p-3 font-bold text-lg transition-all duration-300 shadow-md';
            }
            updateSelection();
        }

        // Update selection display
        function updateSelection() {
            const count = selectedNumbers.size;
            const total = count * pricePerNumber;
            
            document.getElementById('selectedCount').textContent = count;
            document.getElementById('totalPrice').textContent = total.toFixed(2).replace('.', ',');
            
            const reserveBtn = document.getElementById('reserveBtn');
            reserveBtn.disabled = count === 0;
            
            // Display selected numbers
            const selectedDiv = document.getElementById('selectedNumbers');
            selectedDiv.innerHTML = '';
            
            if (count > 0) {
                const sortedNumbers = Array.from(selectedNumbers).sort((a, b) => parseInt(a) - parseInt(b));
                sortedNumbers.forEach(number => {
                    const span = document.createElement('span');
                    span.className = 'bg-blue-100 text-blue-800 px-3 py-1 rounded-full font-bold';
                    span.textContent = number;
                    selectedDiv.appendChild(span);
                });
            } else {
                selectedDiv.innerHTML = '<p class="text-gray-500 italic">Nenhum n√∫mero selecionado</p>';
            }
        }

        // Reserve numbers
        document.getElementById('reserveBtn').onclick = function() {
            if (selectedNumbers.size === 0) return;
            
            document.getElementById('paymentSection').classList.remove('hidden');
            document.getElementById('paymentSection').scrollIntoView({ behavior: 'smooth' });
            
            // Show success message
            const button = this;
            const originalText = button.innerHTML;
            button.innerHTML = '‚úÖ N√∫meros Reservados!';
            button.className = 'bg-gradient-to-r from-green-500 to-green-600 text-white font-bold py-4 px-8 rounded-xl text-xl shadow-lg';
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.className = 'bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-bold py-4 px-8 rounded-xl text-xl shadow-lg transform hover:scale-105 transition-all duration-300';
            }, 3000);
        };

        // Copy PIX key
        function copyPix() {
            const pixKey = '14996033779';
            navigator.clipboard.writeText(pixKey).then(() => {
                const button = event.target;
                const originalText = button.innerHTML;
                button.innerHTML = '‚úÖ Copiado!';
                button.className = 'mt-2 bg-green-500 text-white px-4 py-2 rounded-lg font-semibold';
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.className = 'mt-2 bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-semibold transition-colors';
                }, 2000);
            });
        }

        // Initialize
        generateNumberGrid();
        updateSelection();
    </script>
