                    {section.items && section.items[0]?.prices && (
                      <div className="space-y-2">
                        {section.items.map((item, idx) => (
                          <div key={idx} className="bg-slate-700/30 rounded-lg p-3 hover:bg-slate-700/50 transition">
                            <div className="text-white font-medium mb-2">{item.name}</div>
                            <div className="grid grid-cols-2 gap-2 text-sm">
                              <div className="text-center">
                                <div className="text-amber-300 text-xs mb-1">Ÿàÿ≥ÿ∑</div>
                                <div className="text-amber-400 font-bold">{item.prices.medium} ÿ¨</div>
                              </div>
                              <div className="text-center">
                                <div className="text-amber-300 text-xs mb-1">ŸÉÿ®Ÿäÿ±</div>
                                <div className="text-amber-400 font-bold">{item.prices.large} ÿ¨</div>
                              </div>
                            </div>
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                )}
              </div>
            ))}
          </div>

          {/* Footer */}
          <div className="fixed bottom-0 left-0 right-0 bg-gradient-to-r from-amber-600 to-amber-700 text-white text-center py-4 shadow-2xl">
            <div className="flex items-center justify-center gap-2">
              <span className="text-2xl">üöö</span>
              <p className="font-bold text-lg">ÿ™ŸàÿµŸäŸÑ ŸÖÿ™ÿßÿ≠ ŸÑÿ¨ŸÖŸäÿπ ÿßŸÑŸÖŸÜÿßÿ∑ŸÇ</p>
            </div>
          </div>
        </div>
      );
    };

    const root = ReactDOM.createRoot(document.getElementById('root'));
    root.render(<JooMixMenu />);
  </script>
</body>
